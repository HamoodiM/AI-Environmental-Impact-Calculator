# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_impact_calculator
DB_USER=postgres
DB_PASSWORD=your_password

# Server Configuration
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Firebase Configuration (optional for Phase 2)
# Get this from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# JWT Configuration (if using custom JWT instead of Firebase)
JWT_SECRET=your-super-secret-jwt-key

# OpenAI API (for future integration)
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CO2Signal API Key for real-time carbon intensity data
# Get your free API key at: https://www.co2signal.com/
CO2SIGNAL_API_KEY=your-co2signal-api-key-here
